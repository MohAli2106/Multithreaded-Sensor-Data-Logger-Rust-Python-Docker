pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE_NAME = 'sensor-dashboard'
        CONTAINER_NAME = 'sensor-monitor'
    }
    
    stages {
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/MohAli2106/Multithreaded-Sensor-Data-Logger-Rust-Python-Docker.git'
                sh 'docker build -t ${DOCKER_IMAGE_NAME} .'
            }
        }
        
        stage('Run Container') {
            steps {
                sh '''
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    # Map port 5000 to host port 5000
                    docker run -d -p 5000:5000 --name ${CONTAINER_NAME} ${DOCKER_IMAGE_NAME}
                    echo "Container started on port 5000. You can access it at http://localhost:5000"
                    sleep 2
                    docker ps
                '''
            }
        }
        
        stage('Wait for Manual Stop') {
            steps {
                echo "Container is running on port 5000"
                echo "Access dashboard at: http://localhost:5000"
                echo "Stop this pipeline manually to extract artifacts."
            }
        }
    }
    
    post {
        always {
            sh '''
                echo "Extracting artifacts..."
                docker cp ${CONTAINER_NAME}:/workspace/sensor_data.log ./sensor_data.log 2>/dev/null || echo "No log file extracted"
                docker cp ${CONTAINER_NAME}:/workspace/python/static/plot.png ./plot.png 2>/dev/null || echo "No plot extracted"
                echo "Artifacts extraction complete."
                docker stop ${CONTAINER_NAME} || true
                docker rm ${CONTAINER_NAME} || true
            '''
        }
    }
}
